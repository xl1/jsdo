play: none;\n}\n\n.drop {\n  display: block;\n  \n  width: 52px;\n  height: 52px;\n  margin: 3px;\n  float: left;\n  background: #4a5;\n  cursor: pointer;\n  transition: border-radius 650ms, background-color 450ms;\n  box-shadow: 1px 1px 1px 0px rgba(0,0,0,1), inset 1px 1px 1px 0px rgba(255,255,255,1);\n  // force to redraw\n  -webkit-animation: redraw 1s infinite;\n}\n.dummy {\n  display: block;\n  clear: both;\n}\n\n.check:checked {\n  $after: $size * ($size + 1);\n  &#{after($after)}.drop {\n    background: #4cf;\n    border-radius: 100%;\n  }\n  &#{after($after + $size + 2)}.drop {\n    border-top-left-radius: 0;\n  }\n  &#{after($after + $size)}.drop {\n    border-top-right-radius: 0;\n  }\n  &#{after($after - $size)}.drop {\n    border-bottom-left-radius: 0;\n  }\n  &#{after($after - $size - 2)}.drop {\n    border-bottom-right-radius: 0;\n  }\n  &#{after($after + $size + 1)}.drop {\n    border-top-left-radius: 0;\n    border-top-right-radius: 0;\n  }\n  &#{after($after - $size - 1)}.drop {\n    border-bottom-left-radius: 0;\n    border-bottom-right-radius: 0;\n  }\n  &#{after($after + 1)}.drop {\n    border-top-left-radius: 0;\n    border-bottom-left-radius: 0;\n  }\n  &#{after($after - 1)}.drop {\n    border-top-right-radius: 0;\n    border-bottom-right-radius: 0;\n  }\n}"},"published":"2013-06-01T13:57:32"}